<section>
    <div class="container">
        
        <div class="row mt-5">
            <a class="btn btn-success ms-auto" style="width:110px;" href="/admin/add-category">Add Category</a>
        </div>
        <div class="row mt-5">
        <table class="table">
            <thead>
                <tr>
                    <th scope="col">No</th>
                    <th scope="col">Category</th>
                    <th scope="col">Image</th>
                    <th scope="col">Options</th>
                </tr>
            </thead>
            <tbody>
                {{#each category}}
                <tr>
                    <th scope="row">{{inc @index}}</th>
                    <td>{{this.Category}}</td>
                    <td><img style="width: 50px;height:50px;" src="/category-image/{{this._id}}.jpg" alt=""></td>
                    <td>
                        <a href="/admin/edit-category/{{this._id}}" class="btn btn-primary">Edit</a>
                        <a onclick="return confirm('Do you want to delete {{this.Category}}')" href="/admin/delete-category?id={{this._id}}" class="btn btn-danger">Delete</a>
                    </td>
                </tr>
                {{/each}}
            </tbody>
        </table>
        </div>
    </div>
</section>

