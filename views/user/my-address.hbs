<div class="container-xl px-4 mt-4">

    <nav class="navbar navbar-lg navbar-light bg-light">
        <div class=" d-flex align-items-center justify-content-end">
            <a class="nav-item nav-link link-dark active" href="/my-profile">Profile<span
                    class="sr-only">(current)</span></a>
            <a class="nav-item nav-link link-dark" href="/my-address">Addresses</a>
            <a class="nav-item nav-link link-dark" href="/my-orders">My orders</a>

        </div>
    </nav>

    <div class="container">
        <div class="row">
            <div class="col-md-9">
                <div class="osahan-account-page-right shadow-sm bg-white p-4 h-100">
                    <div class="tab-content" id="myTabContent">
                        <div class="tab-pane fade  active show" id="addresses" role="tabpanel"
                            aria-labelledby="addresses-tab">
                            <h4 class="font-weight-bold mt-0 mb-4">Manage Addresses</h4>
                            <a class="float-end" href="/add-address">Add address</a>
                            {{#if addressMsg}}
                            <span class="text-success">{{addressMsg}}</span>
                            {{/if}}
                            <div class="row pt-2 pb-2">
                                {{#each addresses}}
                                <div class="col-md-6">
                                    <div class="bg-white card addresses-item mb-4  shadow-sm">
                                        <div class="gold-members p-4">
                                            <div class="media">
                                                <div class="mr-3"><i class="icofont-location-pin icofont-3x"></i></div>
                                                <div class="media-body">
                                                    <h6 class="mb-1">{{this.address.type}}</h6>
                                                    <p>{{this.address.name}},{{this.address.mobile}},{{this.address.address}},{{this.address.pincode}}
                                                    </p>
                                                    <p class="mb-0 text-black font-weight-bold"><a
                                                            class="text-primary mr-3" 
                                                            href="/edit-address/{{this.address.addressId}}"><i
                                                                class="icofont-ui-edit"></i> EDIT</a> <a
                                                            class="text-danger" 
                                                            href="/delete-address/{{this.address.addressId}}"><i
                                                                class="icofont-ui-delete"></i> DELETE</a></p>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                {{/each}}
                            </div>

                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

</div>
